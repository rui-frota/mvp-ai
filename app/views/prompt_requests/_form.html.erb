<%= bootstrap_form_with(model: prompt_request, local: true, html: { class: "needs-validation", novalidate: true }) do |form| %>
  <% if prompt_request.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h5 class="alert-heading">
        <i class="bi bi-exclamation-triangle me-2"></i>
        <%= t('prompt_requests.form.errors_title', count: prompt_request.errors.count) %>
      </h5>
      <ul class="mb-0">
        <% prompt_request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card border-0 shadow-lg" style="background: linear-gradient(135deg, rgba(255,255,255,0.95) 0%, rgba(255,255,255,0.9) 100%); backdrop-filter: blur(10px); border-radius: 12px; overflow: hidden;">
    <div class="card-header border-0" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%); color: white;">
      <h5 class="card-title mb-0 d-flex align-items-center">
        <div style="background: rgba(255,255,255,0.2); border-radius: 50%; padding: 8px; margin-right: 12px;">
          <i class="bi bi-chat-text" style="font-size: 1.2rem;"></i>
        </div>
        <%= t('prompt_requests.form.new_title') %>
      </h5>
    </div>
    <div class="card-body p-4">
      <div class="mb-4">
        <%= form.text_area :input_text, 
          class: "form-control form-control-lg shadow-sm custom-input", 
          rows: 4,
          required: true,
          placeholder: t('prompt_requests.form.input_placeholder') %>
        <div class="form-text mt-2">
          <i class="bi bi-info-circle me-1 text-primary"></i>
          <span style="color: #6c757d;"><%= t('prompt_requests.form.input_help') %></span>
        </div>
      </div>
      
      <div class="mb-4">
        <%= form.select :action_type, 
          grouped_options_for_select([
            ["üìù Texto & Escrita", [
              [t('prompt_requests.actions.answer'), 'answer'],
              [t('prompt_requests.actions.explain'), 'explain'],
              [t('prompt_requests.actions.summarize'), 'summarize'],
              [t('prompt_requests.actions.improve'), 'improve'],
              [t('prompt_requests.actions.correct'), 'correct'],
              [t('prompt_requests.actions.rewrite'), 'rewrite']
            ]],
            ["üåç Tradu√ß√£o", [
              [t('prompt_requests.actions.translate_br_us'), 'translate_br_us'],
              [t('prompt_requests.actions.translate_us_br'), 'translate_us_br']
            ]],
            ["üìä An√°lise & Estrutura", [
              [t('prompt_requests.actions.analyze'), 'analyze'],
              [t('prompt_requests.actions.extract_keywords'), 'extract_keywords'],
              [t('prompt_requests.actions.create_outline'), 'create_outline'],
              [t('prompt_requests.actions.bullet_points'), 'bullet_points']
            ]],
            ["üé® Tom & Estilo", [
              [t('prompt_requests.actions.tone_formal'), 'tone_formal'],
              [t('prompt_requests.actions.tone_casual'), 'tone_casual'],
              [t('prompt_requests.actions.creative_writing'), 'creative_writing']
            ]],
            ["üíº Produtividade", [
              [t('prompt_requests.actions.create_email'), 'create_email'],
              [t('prompt_requests.actions.generate_ideas'), 'generate_ideas'],
              [t('prompt_requests.actions.question_answer'), 'question_answer'],
              [t('prompt_requests.actions.code_review'), 'code_review']
            ]]
          ], prompt_request.action_type || 'answer'),
          {},
          { class: "form-select form-select-lg shadow-sm custom-select" } %>
        <div class="form-text mt-2">
          <i class="bi bi-gear me-1 text-primary"></i>
          <span style="color: #6c757d;"><%= t('prompt_requests.form.action_help') %></span>
        </div>
      </div>
      
      <div class="d-grid">
        <button id="process-btn" type="button" 
          class="btn btn-lg border-0 shadow-lg" 
          style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%); color: white; border-radius: 12px; padding: 15px; transition: all 0.3s ease;"
          onmouseover="this.style.transform='translateY(-2px)'; this.style.boxShadow='0 8px 25px rgba(99, 102, 241, 0.4)'"
          onmouseout="this.style.transform='translateY(0)'; this.style.boxShadow='0 4px 15px rgba(0,0,0,0.2)'"
          onclick="showLoadingAndSubmit()" 
          data-bs-toggle="tooltip" 
          title="<%= t('prompt_requests.form.submit_tooltip') %>">
          <span id="btn-text" class="d-flex align-items-center justify-content-center">
            <div style="background: rgba(255,255,255,0.2); border-radius: 50%; padding: 6px; margin-right: 10px;">
              <i class="bi bi-cpu" style="font-size: 1.1rem;"></i>
            </div>
            <%= t('prompt_requests.form.submit_button') %>
          </span>
        </button>
      </div>
    </div>
  </div>
<% end %>

<div id="center-spinner" style="display:none; position:fixed; top:0; left:0; width:100vw; height:100vh; background:rgba(0,0,0,0.85); z-index:999999; justify-content:center; align-items:center; backdrop-filter: blur(3px);">
  <div class="ai-loading-container">
    <!-- Neural Network Animation -->
    <div class="neural-network">
      <div class="node node-1"></div>
      <div class="node node-2"></div>
      <div class="node node-3"></div>
      <div class="node node-4"></div>
      <div class="connection connection-1"></div>
      <div class="connection connection-2"></div>
      <div class="connection connection-3"></div>
    </div>
    
    <!-- AI Brain Icon -->
    <div class="ai-brain">
      <i class="bi bi-cpu-fill"></i>
    </div>
    
    <!-- Rotating Circles -->
    <div class="ai-rings">
      <div class="ring ring-1"></div>
      <div class="ring ring-2"></div>
      <div class="ring ring-3"></div>
    </div>
    
    <!-- Loading Text -->
    <div class="ai-text">
      <h4 class="text-white fw-bold mb-2">
        <i class="bi bi-lightning-charge me-2"></i>
        <%= t('prompt_requests.form.ai_processing') %>
      </h4>
      <p class="text-white-50 mb-0"><%= t('prompt_requests.form.ai_processing_description') %></p>
      
      <!-- Progress Dots -->
      <div class="progress-dots mt-3">
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
        <span class="dot"></span>
      </div>
    </div>
  </div>
</div>

<script>
  // Initialize Bootstrap tooltips
  var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
  var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl)
  })
  
  // Loading function for form submission
  function showLoadingAndSubmit() {
    // Validate form before showing loader
    const form = document.querySelector('form');
    const textInput = document.querySelector('textarea[name="prompt_request[input_text]"]');
    
    if (!textInput.value.trim()) {
      alert('<%= t('prompt_requests.form.input_required') %>');
      return;
    }
    
    // Get spinner element
    const spinner = document.getElementById('center-spinner');
    
    // Force show spinner immediately
    spinner.style.display = 'flex';
    spinner.style.zIndex = '999999';
    spinner.style.position = 'fixed';
    
    // Disable only the process button to prevent double submission
    const processBtn = document.getElementById('process-btn');
    if (processBtn) {
      processBtn.disabled = true;
      processBtn.style.pointerEvents = 'none';
      processBtn.style.opacity = '0.6';
    }
    
    // Small delay to ensure spinner is visible before form submission
    setTimeout(() => {
      form.requestSubmit();
    }, 100);
  }
</script>

