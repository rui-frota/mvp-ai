<% if notice.present? %>
  <div id="notice-alert" style="display: flex; align-items: center; gap: 12px; background: rgba(220, 38, 38, 0.75); color: #fff; border-radius: 8px; box-shadow: 0 2px 8px #0002; padding: 16px 24px; margin-bottom: 24px; font-size: 1.1rem; font-weight: 500; position: relative;">
    <svg width="24" height="24" fill="none" style="flex-shrink:0;" viewBox="0 0 24 24">
      <circle cx="12" cy="12" r="12" fill="#dc2626"/>
      <path d="M8 8l8 8M16 8l-8 8" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <span><%= notice %></span>
    <button onclick="document.getElementById('notice-alert').style.display='none';" aria-label="Fechar" style="background: none; border: none; color: #fff; position: absolute; top: 8px; right: 12px; font-size: 1.3rem; cursor: pointer; padding: 0; line-height: 1;">
      &times;
    </button>
  </div>
<% end %>

<h1 style="font-size: 2.2rem; font-weight: 700; margin-bottom: 32px; color: #fff; text-align: center;">
  <%= t('prompt_requests.index.title') %>
</h1>

<div id="prompt_requests" style="display: flex; flex-direction: column; gap: 24px;">
  <% @prompt_requests.each do |prompt_request| %>
    <div style="background: rgba(35,39,42,0.80); border-radius: 10px; box-shadow: 0 2px 8px #0003; padding: 24px; display: flex; justify-content: space-between; align-items: center;">
      <div>
        <%= render prompt_request %>
      </div>
      <div>
        <%= link_to t('prompt_requests.index.show'), prompt_request, class: "btn", style: "margin-left: 16px;" %>
      </div>
    </div>
  <% end %>
</div>

<div style="margin-top: 32px; margin-bottom: 64px; display: flex; justify-content: center; gap: 16px;">
  <%= link_to t('prompt_requests.index.new'), new_prompt_request_path, class: "btn" %>
  <%= link_to 'Processar arquivo', new_processed_file_path, class: "btn" %>
</div>
