<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6" style="background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 50%, #ec4899 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text; font-weight: 700;">
          <i class="bi bi-plus-circle me-3" style="color: #6366f1;"></i>
          <%= t('prompt_requests.index.new') %>
        </h1>
        <%= link_to prompt_requests_path, 
          class: "btn-glassmorphism-dark btn-glassmorphism-lg",
          title: t('prompt_requests.show.back') do %>
          <i class="bi bi-arrow-left"></i>
          <%= t('prompt_requests.show.back') %>
        <% end %>
      </div>

      <%= render "form", prompt_request: @prompt_request %>
    </div>
  </div>
</div>
